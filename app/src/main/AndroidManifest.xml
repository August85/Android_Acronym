<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ak.acronym"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.ak.acronym.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.ak.acronym.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.ak.acronym.AcronymActivity"
            android:label="@string/title_activity_acronymactivity" >
        </activity>
        <activity
            android:name="com.ak.acronym.AddToDatabaseActivity"
            android:label="@string/title_activity_addtodatabase" >
        </activity>
        <activity
            android:name="com.ak.acronym.SearchActivity"
            android:label="@string/title_activity_favoriteactivity" >
        </activity>
        <activity
            android:name="com.ak.acronym.MyTabActivity"
            android:label="@string/app_name" >
        </activity>
        
    </application>

</manifest>